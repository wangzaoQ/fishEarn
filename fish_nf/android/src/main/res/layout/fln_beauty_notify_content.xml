<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/fln_beauty_notify_app_icon"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/fln_beauty_notify_image"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/fln_beauty_notify_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="#494B77"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="This is titleThis is titleThis is titleThis is titleThis is title" />
        <TextView
            android:id="@+id/fln_beauty_notify_btn"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:background="@drawable/fish_nf_button2"
            android:layout_marginRight="7dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="claim" />
    </LinearLayout>
</FrameLayout>